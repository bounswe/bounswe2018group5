<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.LaunchActivity">

    <TextView
            android:layout_width="379dp"
            android:layout_height="53dp"
            android:text="Freshest Freelance Platform"
            app:layout_constraintTop_toBottomOf="@+id/imageView_drawer_user_pic"
            android:layout_marginTop="16dp"
            android:textAppearance="@android:style/TextAppearance.Material.Body2" android:textSize="24sp"
            android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/textView_drawer_email"
    />
    <ImageView
            android:layout_width="308dp"
            android:layout_height="182dp" app:srcCompat="@drawable/karpuz_logo"
            android:id="@+id/imageView_drawer_user_pic"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"/>
    <include layout="@layout/activity_indicator"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/textView_drawer_email"/>
    <TextView
            android:text="Bogazici University CMPE SWE Group 5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_welcome_copyright"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>